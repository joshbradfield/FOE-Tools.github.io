b-tabs(v-model="tab" type="is-toggle" expanded)
  b-tab-item(:label="$t(i18nPrefix + 'tab.trade_2_1.title')")
    h3.title.is-3 {{$t(i18nPrefix + 'tab.trade_2_1.title')}}
    p {{$t(i18nPrefix + 'tab.trade_2_1.message')}}
    trade(:trade-input="{ age: true, value: simpleTradeArray, type: TradeArrayType.SIMPLE }")
    simple-trade(:trade-array="simpleTradeArray")

  b-tab-item(:label="$t(i18nPrefix + 'tab.fair_trade.title')")
    h3.title.is-3 {{$t(i18nPrefix + 'tab.fair_trade.title')}}
    p {{$t(i18nPrefix + 'tab.fair_trade.message')}}
    trade(:trade-input="{ age: true, value: fairTradeArray, type: TradeArrayType.FAIR }")
    simple-trade(:trade-array="fairTradeArray")
